/* Logo styling */
.site-header {
  padding: 15px 30px;
}

.menu {
  margin-bottom: 5px; /* reduce space below menu */
  padding: 0;         /* remove extra padding if any */
  list-style: none;
}

.tagline {
  margin-top: 5px;    /* reduce space above tagline */
  font-size: 18px;    /* optional: adjust size */
  line-height: 1.2;   /* optional: make it more compact */
}

.site-logo {
  width: 180px;   /* Adjust size */
  height: auto;
}

.logo-container {
  width: 100%;
  text-align: center;
  margin: 20px auto 10px;
  background: transparent;
}

.site-logo {
  max-width: 150px;     /* controls logo size */
  height: auto;
  display: block;
  margin: 0 auto;
  background: transparent;
}

img {
  border: none;
}

.hero-header {
  background: linear-gradient(135deg, #1e3c72, #2a5298);
  color: #ffffff;
  text-align: center;
  padding: 30px 20px 60px;
}

.site-logo {
  max-width: 160px;
  margin-bottom: 15px;
}

.hero-header h1 {
  margin-top: 10px;
  margin-bottom: 10px;
}

.hero-header p {
  max-width: 900px;
  margin: auto;
  font-size: 18px;
}

